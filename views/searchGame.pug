extends home.pug

block hostOrSearch
    div#searchContainer
        h2 Search a Team
        form(action = "/searchGame", method = "POST" autocomplete = "off")
            select(name = "game_type")
                option(value = '') Select the type of game
                option Normal
                option Ranked
                option Clash
                option Custom
            button(type = "submit" class = "btn") Search
    if messages.message != null
        p(align = "center") #{messages.message}
    if items != null
        each item in items
            div.teamPost
                p Room id: #{item.id_post}
                p Host: #{item.hoster}
                p Division: #{item.team_division}
                p Description: #{item.description}
                p Game mode: #{item.game_type}
    else
        h2(align = 'center') No teams found